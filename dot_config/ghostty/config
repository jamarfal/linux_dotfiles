# --- FUENTE ---
font-family = "JetBrainsMono Nerd Font"
font-size = 14
font-feature = calt

# --- TEMA ---
# --- APARIENCIA ---
# Opción 1: La que hace juego con tu Tmux (RECOMENDADA)
theme = Catppuccin Mocha

# Si prefieres Tokyo Night, comenta la de arriba y usa esta:
#theme = tokyo-night

# --- EFECTOS VISUALES (CRISTAL) ---
# Un poco de transparencia hace que se vea increíble
background-opacity = 0.94
# El desenfoque hace que el texto sea legible aunque haya cosas detrás
background-blur-radius = 20

# Quitar la barra de título de macOS (Más espacio para código)
window-decoration = false

# --- VENTANA (Corrección aquí) ---
# En Mac, para quitar la barra superior se usa esto ahora:
macos-titlebar-style = transparent
background-opacity = 0.9
background-blur-radius = 20

# --- COMPORTAMIENTO (Corrección aquí) ---
# El nombre correcto para que no pregunte al cerrar es este:
confirm-close-surface = false

# --- RATÓN ---
mouse-shift-capture = true

# --- ATAJOS ---
keybind = cmd+,=open_config

# --- Mapeos estilo macOS para la terminal ---

# Cmd + Flecha Izquierda -> Ir al principio de la línea (Envía Ctrl+A)
keybind = super+left=text:\x01

# Cmd + Flecha Derecha -> Ir al final de la línea (Envía Ctrl+E)
keybind = super+right=text:\x05

# Cmd + Borrar -> Borrar toda la línea hacia atrás (Envía Ctrl+U)
keybind = super+backspace=text:\x15

# Option + Flecha Izquierda -> Moverse una palabra atrás (Envía Alt+b)
keybind = alt+left=text:\x1b\x62

# Option + Flecha Derecha -> Moverse una palabra adelante (Envía Alt+f)
keybind = alt+right=text:\x1b\x66

# Mapear Cmd+Shift+Izquierda a "Ir al inicio" (Igual que Cmd+Izquierda)
keybind = super+shift+left=text:\x01

# Mapear Cmd+Shift+Derecha a "Ir al final" (Igual que Cmd+Derecha)
keybind = super+shift+right=text:\x05
